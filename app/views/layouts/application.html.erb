<!DOCTYPE html>
<html>
  <head>
    <% if @page %>
      <%= render_meta_data(title_prefix: "Alchemy CMS", title_seperator: " - ") %>
    <% else %>
      <% if content_for?(:title) %>
      <title>Alchemy CMS - <%= content_for(:title) %></title>
      <% else %>
      <title>Alchemy CMS - <%= controller_name.humanize %></title>
      <% end %>
      <% if content_for?(:meta_keywords) %>
      <meta name="keywords" content="<%= content_for(:meta_keywords) -%>" />
      <% end %>
      <% if content_for?(:meta_description) %>
      <meta name="description" content="<%= content_for(:meta_description) -%>" />
      <% end %>
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <%= render "alchemy/shared/header" %>
    <%= yield %>
    <%= render "alchemy/shared/footer" %>

    <script type="text/javascript" charset="utf-8">
      $(document).ready(function() {
        $(".zoomable").fancybox();
      });
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-22277258-1', 'alchemy-cms.com');
      ga('send', 'pageview');
    </script>
    <% if @page %>
      <%= alchemy_preview_mode_code %>
      <%= alchemy_menu_bar %>
    <% end %>
  </body>
</html>
