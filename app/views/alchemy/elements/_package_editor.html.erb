<%= element_editor_for(element) do |el| -%>
  <%= el.edit :name %>
  <%= el.edit :description %>
  <%= el.edit :default_days %>
  <%= el.edit :min_days %>
  <%= el.edit :amount_per_day %>
  <%= el.edit :payment, select_values: [["PayPal", "PayPal"], ["Contact only", ""]] %>
  <%= el.edit :success_page, select_values: pages_for_select(nil, nil, 'Please Choose', :urlname) %>
  <%= el.edit :abort_page, select_values: pages_for_select(nil, nil, 'Please Choose', :urlname) %>
<%- end -%>
