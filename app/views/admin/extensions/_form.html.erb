<%= form_for @extension, url: resource_path(@extension), remote: true do |f| %>
  <div id="errors">
    <ul>
    <% @extension.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
  <table>
    <tr>
      <td class="label"><%= f.label :name %></td>
      <td class="input"><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :maintainer %></td>
      <td class="input"><%= f.text_field :maintainer %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :url %></td>
      <td class="input"><%= f.text_field :url %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :description %></td>
      <td class="input"><%= f.text_area :description, rows: 8 %></td>
    </tr>
    <tr>
      <td class="label"><%= f.label :keywords %></td>
      <td class="input"><%= f.text_field :keyword_list %></td>
    </tr>
    <tr>
      <td class="submit" colspan="2">
        <%= f.button _t(:save), class: 'button' %>
      </td>
    </tr>
  </table>
<% end %>
