<li class="<%= cycle('even', 'odd') %>">
  <h3><%= link_to extension.name, extension %></h3>
  <p>
    <b>by:</b>
    <%= link_to extension.maintainer, extensions_path(by: extension.maintainer, keyword: params[:keyword]) %>
  </p>
  <% if extension.tags.any? %>
  <p>
    <b>Keywords:</b>
    <%= extension.tags.map { |k| link_to k.name, url_for(keyword: k.name, by: params[:by]) }.join(', ').html_safe %>
  </p>
  <% end %>
</li>
