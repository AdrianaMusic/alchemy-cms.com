<%= form_for(@extension) do |f| %>
  <% if @extension.errors.any? %>
    <div class="alert-box alert">
      <h3>Please correct these <%= pluralize(@extension.errors.count, "error") %>:</h3>
      <ul>
      <% @extension.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <small class="hint">Mandatory. The name must be unique</small>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url %>
    <small class="hint">Mandatory. Start URL with http(s)://</small>
    <%= f.url_field :url %>
  </div>
  <div class="field">
    <%= f.label :maintainer %>
    <small class="hint">Mandatory</small>
    <%= f.text_field :maintainer %>
  </div>
  <div class="field">
    <%= f.label :keywords %>
    <small class="hint">Separate keywords by komma</small>
    <%= f.text_field :tag_list %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <small>Markdown enabled</small>
    <%= f.text_area :description, rows: 12 %>
  </div>
  <div class="actions">
    <%= f.submit 'Register Extension', class: 'button' %>
    or <%= link_to 'Cancel', extensions_path %>
  </div>
<% end %>
