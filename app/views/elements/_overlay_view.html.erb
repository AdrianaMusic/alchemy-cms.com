<div class="overlay" id="<%= element_dom_id(element) %>"<%= element_preview_code(element) -%>>
	<div class="overlay_images">
		<%- element.all_contents_by_type("EssencePicture").each do |content| -%>
		<div class="overlay_image <%= content.essence.css_class %>">
			<%= render_essence_view(content, :image_size => "160x120") %>
		</div>
		<%- end -%>
	</div>
	<div class="text">
		<%= render_essence_view_by_name(element, 'text') %>
	</div>
	<div class="link">
		<%= render_essence_view_by_name(element, 'link') %>
	</div>
</div>
